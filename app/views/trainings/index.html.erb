<p id="notice"><%= notice %></p>

<h1>Trainings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Duration</th>
      <th>Participants</th>
      <th>Location</th>
      <th>Status</th>
      <th>Published</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @public_trainings.each do |training| %>
      <tr>
        <td><%= training.title %></td>
        <td><%= training.date %></td>
        <td><%= training.duration %></td>
        <td><%= training.participants %></td>
        <td><%= training.Location %></td>
        <td><%= training.status %></td>
        <td><%= training.published %></td>
        <td><%= link_to 'Show', training %></td>
        <td><%= link_to 'Edit', edit_training_path(training) %></td>
        <td><%= link_to 'Destroy', training, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

