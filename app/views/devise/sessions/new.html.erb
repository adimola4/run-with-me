<section class="form-auth text-canter container col-4">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="text-center mb-4">
    <%= image_tag("/assets/images/running-couple.jpg", class: "mb-4", width: '72', height:'72')  %>
    <h1 class="h3 mb-3 font-weight-normal">Login</h1>
  </div>
  <div class="form-label-group">
    <%= f.email_field :email, autofocus: true, id:"inputEmail", class:"form-control", placeholder:"Email address", autocomplete: "email" %>
    <label for="inputEmail">Email address</label>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password, id:"inputPassword", class:"form-control", placeholder:"Password", autocomplete: "current-password" %>
    <label for="inputPassword">Password</label>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
        <label>
          <%= f.check_box :remember_me, value:"remember-me"%>   Remember me
        </label>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

</section>




    

